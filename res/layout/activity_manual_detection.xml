<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                tools:context=".ResultActivity">

     <com.pacesystem.lib.PaceManualDetectionView
    	android:id="@+id/id_result_imageview_manual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />
     
     <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" 
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="3" >

         <View
             android:layout_width="match_parent"
	    	 android:layout_height="0dp"
        	 android:layout_weight="1" />
        
        
        <LinearLayout
       		android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            
            <Button
	            android:id="@+id/id_result_button"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@drawable/btn_ok_bg"  />
            
         </LinearLayout>

        <View
             android:layout_width="match_parent"
	    	 android:layout_height="0dp"
        	 android:layout_weight="1" />
        
        
    </LinearLayout>
     
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15px"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="신분증 테두리를 선택해 주세요" />
     

    <ProgressBar
        android:id="@+id/id_result_progressbar"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    

</RelativeLayout>
